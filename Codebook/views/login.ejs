<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head", { title: "Log in", stylesheet: "/stylesheets/login.css" }) %>

  <body>
    <%- include("./partials/navbarGuest") %>

    <div class="pageContainer" id="authorizationContainer">
      <!-- Login Form -->
      <form action="/login" method="POST" class="col s12">
        <h4 id="formTitle">Log in</h4>

        <!-- Email Form -->
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <input type="email" id="email" name="email">
          <label for="email">Email</label>
        </div>

        <!-- Password -->
        <div class="input-field">
          <i class="material-icons prefix">lock</i>
          <input type="password" id="password" name="password">
          <label for="password">Password</label>
        </div>

        <button type="submit" class="btn">Log in</button>

        <!-- Error message -->
        <% if (typeof messages === "object" && messages && messages.error) { %>
          <p class="red-text center-align"><%= messages.error %></p>
        <% } %>

        <!-- Success message -->
        <% if (typeof messages === "object" && messages && messages.success) { %>
          <p class="green-text center-align"><%= messages.success %></p>
        <% } %>

      </form>
    </div>
    <%- include("./partials/footer") %>
  </body>
</html>
