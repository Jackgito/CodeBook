<!-- question.ejs -->

<%- include("./partials/head", { title: "Log in", stylesheet: "/stylesheets/question.css" }) %>

<body>
  <!-- These values are used in the JS file -->
  <div id="isAuthenticated" data-is-authenticated="<%= isAuthenticated %>"></div>
  <div id="anotherElement" data-is-authenticated="<%= isAuthenticated %>"></div>

  <% if (typeof isAuthenticated === 'boolean' && isAuthenticated) { %>
    <%- include('./partials/navbarLoggedIn') %>
  <% } else { %>
    <%- include('./partials/navbarGuest') %>
  <% } %>

  <div class="pageContainer">
    <div class="row">
      <div class="col s12">

        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= title %></span>
            <div class="postMetadata">
              <p>Asked <%= timeSincePost %> by <%= author %>.&nbsp;&nbsp;&nbsp;Viewed: <%= views %> times.</p>
            </div>
            <p><%= question %></p>

            <div class="votes">
              <p id="voteCount">Votes: <%= votes %></p>
              <p id="loginMessage" style="display: none;">Log in to vote.</p>
              <p id="clickMessage" style="display: none;">You have exceeded the vote limit.</p>
              <a class="btn-floating waves-effect waves-light blue" id="thumbsUp"><i class="material-icons">thumb_up</i></a>
              <a class="btn-floating waves-effect waves-light blue" id="thumbsDown"><i class="material-icons">thumb_down</i></a>

              <% if (isAuthenticated.user == title) { %>
                <a href="questions/edit/<%= title %>" class="waves-effect waves-light btn blue">Edit</a>
                <a href="questions/delete/<%= title %>" class="waves-effect waves-light btn blue">Delete</a>
              <% }%>

            </div>
          </div>
        </div>

        <h4>Comments</h4>

        <% comments.forEach(comment => { %>
          <div class="card">
            <div class="card-content">
              <span class="card-title">
                <ul>
                  <li><%= comment %></li>
                </ul>
              </span>
            </div>
          </div>
        <% }); %>

      </div>
    </div>
  </div>

  <!-- Include your external JavaScript file -->
  <script type="text/javascript" src="/javascripts/question.js"></script>

</body>
</html>
