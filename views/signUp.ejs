<!DOCTYPE html>
<html lang="en">

  <%- include("./partials/head", { title: "Sign up", stylesheet: "/stylesheets/signUp.css" }) %>

  <body>
    <%- include("./partials/navbarGuest") %>
    <div class="pageContainer" id="authorizationContainer">

      <!-- Sign up form -->
      <form action="/signUp" method="POST" id="signUpForm">
        <h4 id="formTitle">Sign up</h4>

          <!-- Name -->
          <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <input id="username" type="text" name="username" required>
            <label for="username">Username</label>
            <span hidden class="helper-text" id="invalidUsername"></span>
          </div>

          <!-- Email Form -->
          <div class="input-field">
            <i class="material-icons prefix">email</i>
            <input id="email" type="email" name="email"">
            <label for="email">Email</label>
            <span hidden class="helper-text" id="invalidEmail"></span>
          </div>
          
          <!-- Password -->
          <div class="input-field">
            <i class="material-icons prefix">lock</i>
            <input id="password" type="password" name="password">
            <label for="password">Password</label>
            <span class="helper-text" id="invalidPassword"></span>
          </div>

          <!-- Confirm Password -->
          <div class="input-field">
            <i class="material-icons prefix">lock</i>
            <input id="confirmPassword" type="password" name="confirmPassword">
            <label for="confirmPassword">Confirm Password</label>
            <span class="helper-text" id="confirmPasswordError"></span>
          </div>

          <button type="submit" class="btn">Sign up</button>

          <!-- Error message -->
          <% if (typeof messages === "object" && messages && messages.error) { %>
            <p class="red-text center-align"><%= messages.error %></p>
          <% } %>

        </div>
      </form>
    </div>
    <%- include("./partials/footer") %>

  <script type="module" src="/javascripts/signUp.js"></script>

  </body>
</html>
